<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Category</th>
      <th>Name</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.category.name, item.category if item.category %></td>
        <td><%= link_to item.name, item %></td>
        <td><%= item.description %></td>
        <td><%= link_to 'Edit', edit_item_path(item), class: "button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if @category %>
  <%= link_to "New #{@category.name} Item", new_category_item_path(@category), class: "button" %>
<% else %>
  <%= link_to 'New Item', new_item_path, class: "button" %>
<% end %>