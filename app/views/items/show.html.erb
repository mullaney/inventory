<p id="notice"><%= notice %></p>

<h1>Item: <%= @item.name %></h1>

<p>
  <strong>Category:</strong>
  <%= link_to @item.category.name, @item.category if @item.category %>
</p>

<p>
  <strong>Description:</strong>
  <%= @item.description %>
</p>

<p>
  <strong>Current Balance:</strong>
  <%= @balance %>
</p>
<hr />
<p>
  <strong>First Delivery Date:</strong>
  <%= @item.first_delivery_date %><br />
  <strong>Total Sales:</strong>
  <%= @item.total_sales %><br />
  <strong>Recent Sales:</strong>
  <%= @item.recent_sales %> in last four weeks<br />
  <strong>Weeks of stock:</strong>
  <% if @item.recent_sales == 0 %>
    "Not applicable."
  <% else %>
    <%= @balance / (@item.recent_sales / 4.0) %>
  <% end %>
</p>
<hr />
<p><%= link_to "Edit #{@item.name}", edit_item_path(@item), class: "button" %></p>

<% if !@transactions.blank? %>
  <table>
    <tr>
      <th>Id</th>
      <th>Date</th>
      <th>Code</th>
      <th>Item</th>
      <th>Amount</th>
      <th></th>
    </tr>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.id %></td>
        <td><%= transaction.date %></td>
        <td><%= transaction.code %></td>
        <td><%= transaction.item.name %></td>
        <td><%= transaction.amount %></td>
      </tr>
    <% end %>
  </table>
<% end %>

<p>
  <%= link_to "New Transaction", new_item_transaction_path(@item), class: "button" %>
</p>